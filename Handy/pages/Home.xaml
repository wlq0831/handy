<Window x:Class="Handy.pages.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Handy.pages"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="首页" Height="900" Width="1000">

    <DockPanel Margin="10">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0">
                <Border Style="{StaticResource BorderTipWarning}">
                    <TextBlock Text="欢迎使用管理系统" FontSize="12" Foreground="#FF6F7274" />
                </Border>
                <Border BorderBrush="#FDE6D8D8"  Background="#FDF5F5F5" BorderThickness="1" CornerRadius="10">
                    <StackPanel Height="160" Orientation="Horizontal" VerticalAlignment="Center">
                        <!--头像-->
                        <TextBlock Text="&#xe627;" Style="{StaticResource iconfont}" Foreground="#FF1AB494" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Margin="50,0,0,0" />
                        <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                            <WrapPanel  Margin="5" >
                                <TextBlock  Text="欢迎您：" Width="60" FontSize="12" Foreground="#FF6F7274" />
                                <TextBlock x:Name="userName" Text="管理员"  Width="60" FontSize="12" Foreground="#FF6F7274" FontWeight="Heavy" />
                            </WrapPanel>
                            <!--<TextBlock  Margin="5" Text="当前版本：正式版" FontSize="12" Foreground="#FF6F7274" />-->
                            <WrapPanel  Margin="5" >
                                <TextBlock  Text="当前版本：" FontSize="12" Foreground="#FF6F7274" />
                                <TextBlock Text="正式版"  FontSize="12" Foreground="#FF6F7274" FontWeight="Heavy" />
                            </WrapPanel>
                        </StackPanel>
                        <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                            <WrapPanel  Margin="5" >

                            </WrapPanel>
                            <!--<TextBlock  Margin="5" Text="当前版本：正式版" FontSize="12" Foreground="#FF6F7274" />-->
                            <WrapPanel  Margin="5" >
                                <TextBlock FontSize="12" Foreground="#FF7A90EC">

                                </TextBlock>
                            </WrapPanel>
                            <WrapPanel  Margin="5" >
                                <TextBlock FontSize="12" Foreground="#FF7A90EC">

                                </TextBlock>
                            </WrapPanel>
                        </StackPanel>


                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <hc:TransitioningContentControl>
                    <hc:Carousel Margin="5" IsCenter="True" AutoRun="True" MaxWidth="800" Height="200" VerticalAlignment="Center">
                        <Image Width="800" Stretch="UniformToFill" Source="/Handy;component/Resources/images/01.jpg"/>
                        <Image Width="800" Stretch="UniformToFill" Source="/Handy;component/Resources/images/02.jpg"/>
                        <hc:SimplePanel Width="800">
                            <Image Stretch="UniformToFill" Source="/Handy;component/Resources/images/03.jpg"/>
                            <TextBlock Text="管理系统" Style="{StaticResource TextBlockDefault}" FontSize="50" FontWeight="Bold" Foreground="White"/>
                        </hc:SimplePanel>
                        <Image Width="800" Stretch="UniformToFill" Source="/Handy;component/Resources/images/04.jpg"/>
                        <Image Width="800" Stretch="UniformToFill" Source="/Handy;component/Resources/images/05.jpg"/>
                    </hc:Carousel>
                </hc:TransitioningContentControl>
            </StackPanel>
        </Grid>

        <StackPanel DockPanel.Dock="Top">
            <Border Style="{StaticResource BorderTipSuccess}">
                <TextBlock Text="快捷入口" FontSize="12" Foreground="#FF6F7274" />
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Command="{Binding MyCommand}" CommandParameter="用户管理" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58963;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="用户管理" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="0" Grid.Column="1" Command="{Binding MyCommand}" CommandParameter="角色管理" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58922;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="角色管理" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="0" Grid.Column="2" Command="{Binding MyCommand}" CommandParameter="菜单管理" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#59604;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="菜单管理" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="0" Grid.Column="3" Command="{Binding MyCommand}" CommandParameter="数据字典" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58890;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="数据字典" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="0" Command="{Binding MyCommand}" CommandParameter="定时任务" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#59052;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="定时任务" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="1" Command="{Binding MyCommand}" CommandParameter="代码生成" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58880;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="代码生成" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="2" Command="{Binding MyCommand}" CommandParameter="系统日志" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58918;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="系统日志" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>

                <Button Grid.Row="1" Grid.Column="3" Command="{Binding MyCommand}" CommandParameter="岗位管理" HorizontalAlignment="Stretch" Height="150" Padding="0" Background="#FF1AB494" DockPanel.Dock="Right" Margin="0,0,10,20" BorderThickness="0">
                    <DockPanel>
                        <TextBlock Text="&#58931;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="60" VerticalAlignment="Center" Margin="10,0,0,0" />
                        <TextBlock DockPanel.Dock="Right" Text="岗位管理" FontSize="18" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" />
                    </DockPanel>
                </Button>


            </Grid>
            <Border Style="{StaticResource BorderTipDanger}">
                <TextBlock Text="系统状态" FontSize="12" Foreground="#FF6F7274" />
            </Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0" CornerRadius="5" BorderThickness="1" Height="200"  Margin="10,0,10,0" Background="#FF23C6C8" BorderBrush="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Width="300" Grid.Row="1" Grid.Column="1">
                            <WrapPanel>
                                <TextBlock Text="&#58925;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="40" VerticalAlignment="Center" Margin="10 0" />
                                <TextBlock Text="运行时长" Foreground="White" Margin="10,10,10,2" FontSize="20" />
                            </WrapPanel>
                            <TextBlock x:Name="runningTime" Text="0天0小时0分" Foreground="White" FontSize="30" Margin="0,20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1" CornerRadius="5" BorderThickness="1" Height="200"  Margin="10,0,10,0" Background="#FF23C6C8" BorderBrush="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Width="200" Grid.Row="1" Grid.Column="1">
                            <WrapPanel>
                                <TextBlock Text="&#59589;" Style="{StaticResource iconfont}" HorizontalAlignment="Center" FontSize="40" VerticalAlignment="Center" Margin="10 0" />
                                <TextBlock Text="CPU使用率" Foreground="White" Margin="10,10,10,2" FontSize="20" />
                            </WrapPanel>
                            <TextBlock x:Name="cpu1" Text="1%" TextAlignment="Center" FontSize="50" Foreground="White" Margin="0,20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="2" CornerRadius="5" BorderThickness="1" Height="200" Margin="10,0,10,0" Background="#FF23C6C8" BorderBrush="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center" Width="200" Grid.Row="1" Grid.Column="1">
                            <WrapPanel>
                                <TextBlock Text="&#58956;" Style="{StaticResource iconfont}" HorizontalAlignment="Left" FontSize="40" VerticalAlignment="Center" Margin="10 0" />
                                <TextBlock Text="内存使用率" Foreground="White" Margin="10,10,10,2" FontSize="20" />
                            </WrapPanel>
                            <TextBlock x:Name="ram" Text="1%" TextAlignment="Center" FontSize="50" Foreground="White" Margin="0,20"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
        </StackPanel>
    </DockPanel>
</Window>
